{
  "name": "iobroker.chargemaster",
  "version": "0.14.5",
  "description": "Adapter for managing of multi EV-chargers with use of PV-energy",
  "author": {
    "name": "Hombach",
    "email": "chargemaster@homba.ch"
  },
  "homepage": "https://github.com/hombach/ioBroker.chargemaster",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "power",
    "energy",
    "chargemaster",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hombach/ioBroker.chargemaster.git"
  },
  "engines": {
    "node": ">= 20.9.0"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.1.1",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@alcalzone/release-script-plugin-manual-review": "^4.0.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.2.2",
    "@iobroker/types": "^7.1.0",
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "^8.0.2",
    "@types/node": "^25.2.2",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^21.0.0",
    "@types/sinon-chai": "^4.0.0",
    "chai": "^6.2.2",
    "chai-as-promised": "^8.0.2",
    "proxyquire": "^2.1.3",
    "set-value": "^4.0.1",
    "sinon": "^21.0.1",
    "sinon-chai": "^4.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "main": "build/main.js",
  "files": [
    "admin/",
    "build/",
    "io-package.json",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package && npm run test:integration",
    "check": "tsc --noEmit",
    "lint": "eslint -c eslint.config.mjs .",
    "lintdebug": "eslint --debug -c eslint.config.mjs . | more",
    "make": "npm run lint && npm run build && npm run test",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/hombach/ioBroker.chargemaster/issues"
  },
  "readmeFilename": "README.md"
}
